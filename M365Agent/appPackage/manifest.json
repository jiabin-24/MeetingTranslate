{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.21/MicrosoftTeams.schema.json",
  "manifestVersion": "1.21",
  "version": "1.0.0",
  "id": "${{TEAMS_APP_ID}}",
  "developer": {
    "name": "Microsoft",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.microsoft.com/privacy",
    "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "TransMeet${{APP_NAME_SUFFIX}}",
    "full": "Meeting Transcript Bot"
  },
  "description": {
    "short": "Real-time meeting translation inside Microsoft Teams.",
    "full": "A lightweight Teams app that provides instant multilingual transcription and translation during meetings, helping participants understand and collaborate across languages."
  },
  "accentColor": "#235EA5",
  "bots": [
    {
      "botId": "${{BOT_ID}}",
      "scopes": [
        "personal",
        "team",
        "groupChat"
      ],
      "isNotificationOnly": false,
      "commandLists": [
        {
          "scopes": [ "personal", "team", "groupChat" ],
          "commands": [
            {
              "title": "Hi",
              "description": "Say hi to the bot."
            }
          ]
        }
      ],
      "supportsCalling": true,
      "supportsVideo": true
    }
  ],
  "configurableTabs": [
    {
      "configurationUrl": "https://${{BOT_DOMAIN}}/configure",
      "canUpdateConfiguration": true,
      "scopes": [
        "team",
        "groupChat"
      ],
      "context": [
        "meetingSidePanel",
        "meetingStage"
      ]
    }
  ],
  "validDomains": [
    "${{BOT_DOMAIN}}"
  ],
  "permissions": [ "identity", "messageTeamMembers" ],
  "webApplicationInfo": {
    "id": "${{BOT_ID}}",
    "resource": "https://RscPermission"
  },
  "authorization": {
    "permissions": {
      "resourceSpecific": [
        {
          "name": "OnlineMeeting.ReadBasic.Chat",
          "type": "Application"
        },
        {
          "name": "MeetingStage.Write.Chat",
          "type": "Delegated"
        },
        {
          "name": "ChannelMeetingStage.Write.Group",
          "type": "Delegated"
        },
        {
          "name": "LiveShareSession.ReadWrite.Chat",
          "type": "Delegated"
        },
        {
          "name": "LiveShareSession.ReadWrite.Group",
          "type": "Delegated"
        }
      ]
    }
  }
}